{
  "interactivity": {
    "detectsOn": "canvas",
    "events": {
      "onHover": {
        "enable": true,
        "mode": "repulse",
        "parallax": {
          "enable": true,
          "force": 100,
          "smooth": 100
        }
      },
      "onClick": {
        "enable": true,
        "mode": "pause"
      },
      "resize": true
    }
  },
  "particles": {
    "number": {
      "value": 80,
      "density": {
        "enable": true,
        "valueArea": 800
      }
    },
    "color": {
      "value": "#ffffff"
    },
    "shape": {
      "type": "circle"
    },
    "opacity": {
      "value": {
        "min": 0.1,
        "max": 0.5
      }
    },
    "size": {
      "value": 3,
      "random": true
    },
    "links": {
      "enable": true,
      "distance": 100,
      "color": "#ffffff",
      "opacity": 0.4,
      "width": 1
    },
    "move": {
      "enable": true,
      "speed": 1,
      "direction": "none",
      "random": false,
      "straight": true
    }
  }
}
