{
  "detectRetina": true,
  "interactivity": {
    "detectsOn": "canvas",
    "events": {
      "onClick": {
        "enable": true,
        "mode": "pause"
      },
      "resize": true
    }
  },
  "particles": {
    "color": {
      "value": "#ffffff"
    },
    "rotate": {
      "value": 90
    },
    "move": {
      "direction": "bottom",
      "enable": true,
      "outMode": "out",
      "speed": 30,
      "straight": true
    },
    "number": {
      "value": 200
    },
    "opacity": {
      "random": true,
      "value": 0.5
    },
    "shape": {
      "stroke": {
        "color": "#efefefee",
        "width": 1
      },
      "type": "line"
    },
    "size": {
      "value": 15
    }
  }
}
